---

<BaseLayout title={`${artist.name} - Artist Profile`}>
  <div class="min-h-screen">
    <PageHero subtitle={"meet"} title={artist.name} />
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex justify-center">
        <div class="flex w-full md:w-3/4">
          {/* Image Section */}
          <div class={`w-1/3 aspect-[3/4]`}>
            <img
              src={artist.imageSrc}
              alt={artist.imageAlt}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="w-full py-4 pl-12">
            <h3>{artist.name}</h3>
            <p>{artist.location} - B. {artist.dob}</p>
            <p class="mt-4 !text-primary">{artist.bio}</p>
          </div>
        </div>
        <div class="flex flex-col w-full md:w-1/4 px-8 pt-12">
          <h2>Represented By</h2>
          <h2>Gallery 1</h2>
          <h2>Gallery 2</h2>
        </div>
      </div>
    </div>
    <div class="border-t border-b border-primary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex">
        {/* mini nav bar*/}
        <div
          id="nav-artworks"
          data-section="artworks"
          class="w-1/4 border-b-2 border-primary hover:border-primary mr-8 py-4 cursor-pointer nav-item active"
        >
          Artworks
        </div>
        <div
          id="nav-exhibitions"
          data-section="exhibitions"
          class="w-1/4 border-b-2 border-transparent hover:border-primary mr-8 py-4 cursor-pointer nav-item"
        >
          Exhibitions
        </div>
      </div>
    </div>
    {/* Artworks section */}
    <div id="section-artworks" class="section-content">
      <CardList cards={artist.artwork} />
    </div>

    {/* Exhibitions section */}
    <div id="section-exhibitions" class="section-content hidden">
      {/* Upcoming Exhibitions */}
      <CardList
        title="Upcoming Exhibitions"
        cards={artist.exhibitions.upcoming}
        maxRows={1}
      />

      {/* Past Exhibitions */}
      <CardList
        title="Past Exhibitions"
        cards={artist.exhibitions.upcoming}
        maxRows={1}
      />
    </div>
  </div>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navItems = document.querySelectorAll('.nav-item');
    const sections = document.querySelectorAll('.section-content');

    navItems.forEach(item => {
      item.addEventListener('click', () => {
        const targetSection = (item as HTMLElement).dataset.section;

        // Remove active class from all nav items
        navItems.forEach(nav => {
          nav.classList.remove('active');
          nav.classList.remove('border-primary');
          nav.classList.add('border-transparent');
        });

        // Add active class to clicked nav item
        item.classList.add('active');
        item.classList.add('border-primary');
        item.classList.remove('border-transparent');

        // Hide all sections
        sections.forEach(section => {
          section.classList.add('hidden');
        });

        // Show the target section
        const targetElement = document.getElementById(`section-${targetSection}`);
        if (targetElement) {
          targetElement.classList.remove('hidden');
        }
      });
    });
  });
</script>

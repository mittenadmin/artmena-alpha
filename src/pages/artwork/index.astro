---
import "../../styles/index.css";

import PageHero from "../../components/PageHero.astro";
import CardList from "../../components/Cards/CardList.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { artworks } from "../../data/artworks";
import { artists } from "../../data/artists";

// Transform artwork data for CardList component
const artworkCards = artworks.map((artwork) => {
  const artist = artists.find((a) => a.id === artwork.artist_id)!;
  return {
    id: artwork.id,
    imageSrc: artwork.imageUrl,
    imageAlt: artwork.title,
    preText: artwork.category,
    title: artwork.title,
    text1: artist.name,
    text2: artwork.price,
  };
});
---

<BaseLayout title="artmena/artwork" description="artmena">
  <div class="min-h-screen">
    <PageHero title="Artwork" />

    <CardList objectType="artwork" cards={artworkCards} />
  </div>
</BaseLayout>

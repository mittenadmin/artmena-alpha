---
import "../../styles/index.css";

import PageHero from "../../components/PageHero.astro";
import CardList from "../../components/Cards/CardList.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { galleries } from "../../data/galleries";

// Transform gallery data for CardList component
const galleryCards = galleries.map(gallery => ({
  id: gallery.id,
  imageSrc: gallery.imageUrl,
  imageAlt: gallery.name,
  title: gallery.name,
  text1: `${gallery.location}, ${gallery.country}`
}));
---

<BaseLayout title="artmena/galleries" description="artmena">
  <div class="min-h-screen">
    <PageHero title="Galleries" />

    <CardList objectType="galleries" cards={galleryCards} imageRatio={"square"} />
  </div>
</BaseLayout>

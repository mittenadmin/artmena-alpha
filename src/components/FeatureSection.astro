---
export interface Props {
  imageUrl: string;
  title: string;
  description: string;
  learnMoreText?: string;
  onclick?: string;
}

const { imageUrl, title, description, onclick } = Astro.props;
---

<section class="w-full bg-primary">
  <div class="flex flex-col md:flex-row cursor-pointer">
    {/* Image - 2/3 width on desktop */}
    <div class="md:w-2/3 h-64 md:h-96">
      <img src={imageUrl} alt={title} class="w-full h-full object-cover" />
    </div>

    {/* Content - 1/3 width on desktop */}
    <div class="md:w-1/3 p-8 md:p-8 flex flex-col justify-start">
      <h2 class="text-3xl md:text-4xl font-bold !text-[#FFFCEC] mb-4">
        {title}
      </h2>
      <p class="text-lg !text-[#FFFCEC] mb-6 leading-relaxed">
        {description}
      </p>
      {
        /*<div class="inline-flex items-center text-[#FFFCEC]  font-semibold hover:text-blue-800 transition-colors mt-auto">*/
      }
      {/*  <span>{learnMoreText}</span>*/}
      {/*</div>*/}
    </div>
  </div>
</section>

---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: "Artists", href: "/artists" },
  { name: "Artwork", href: "/artwork" },
  { name: "Exhibitions", href: "/exhibitions" },
  { name: "Galleries", href: "/galleries" },
  { name: "News", href: "/news" },
];
// Adjust logic as needed
---

<nav class="ml-10 flex items-baseline space-x-8">
  {
    navItems.map((item) => {
      const isActive =
        item.name === "Artists"
          ? currentPath.startsWith("/artists")
          : currentPath.startsWith(item.href) &&
            (currentPath === item.href ||
              currentPath.startsWith(item.href + "/"));
      return (
        <a
          href={item.href}
          class={`hover:text-primary px-3 py-2 text-sm transition-colors border-b ${
            isActive
              ? "text-primary border-primary"
              : "text-secondary border-transparent hover:border-primary"
          }`}
          aria-current={currentPath === item.href ? "page" : undefined}
        >
          {item.name}
        </a>
      );
    })
  }
</nav>

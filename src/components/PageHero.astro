---
import { ClientRouter, slide } from "astro:transitions";
export interface Props {
  subtitle?: string;
  title: string;
  largeText?: boolean;
}

const { subtitle = "Explore", title, largeText = false } = Astro.props;
---

<section class="relative h-32 border-b border-primary">
  <ClientRouter />
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex flex-col items-center justify-center"
  >
    <h3 transition:name={subtitle} class="uppercase">
      {subtitle}
    </h3>
    <h1 class={`${largeText ? 'text-4xl' : 'text-5xl'} font-bold`} transition:name={title}>
      {title}
    </h1>
  </div>
</section>
